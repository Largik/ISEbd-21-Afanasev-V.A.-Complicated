<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance%22%3E">
    <extensions>
      <add assembly="NLog.MailKit"/>
    </extensions>
    <targets async="true">
      <target name="logfile" xsi:type="File" fileName="D://Logs//file.txt" layout="${level:uppercase=true}: ${message} - ${date:format=dd.MM.yyyy}"/>
      <target xsi:type="Mail"
      name="logMail"
      html="true"
      body="${message}"
      subject="Fatal error"
      smtpAuthentication="Basic"
      to="grunya98@gmail.com"
      from="grunya98@gmail.com"
      smtpUserName="grunya98@gmail.com"
      smtpPassword="************"
      smtpServer="smtp.gmail.com"
      smtpPort="25"
      layout="${level:uppercase=true}: ${message} - ${date:format=dd.MM.yyyy}"/>
    </targets>
    <rules>
      <logger name="" level="Info" writeTo="logfile" />
      <logger name="" level="Warn" writeTo="logfile" />
      <logger name="" level="Error" writeTo="logfile" />
      <logger name="" level="Fatal" writeTo="logMail" />
    </rules>
  </nlog>
</configuration>